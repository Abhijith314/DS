#include<stdio.h>
#define size 3
void inatrear();
void delatfront();
void inatfront();
void delatrear();
void traversal();
int queue[size],f=-1,r=-1;
void main()
{
int option,y;
do
{
printf("\t\t\tMENU\n\n\n1: InsertionAtRear\n2: InsertionAtFront\n3: DeletionAtRear\n4: DeletionAtFront\n5: Traversal\n");
printf("Enter the option : ");
scanf("%d",&option);
switch(option)
{
case 1:
inatrear();
break;
case 2:
inatfront();
break;
case 3:
delatrear();
break;
case 4:
delatfront();
break;
case 5:
traversal();
break;
default:
printf("Invalid option\n");
break;
}
printf("Do you want to continue press '1' for YES '0' for NO : ");
scanf("%d",&y);
}while(y==1);
}
void inatrear()
{
if(r==size-1)
printf("Queue overflow\n");
else if(f==-1&&r==-1)
{
f=f+1;
r=r+1;
printf("Enter the element : ");
scanf("%d",&queue[r]);
}
else
{
r=r+1;
printf("Enter the element : ");
scanf("%d",&queue[r]);
}
}
void inatfront()
{
if(f==0)
printf("Queue overflow\n");
else if(f==-1 && r==-1)
{
f=f+1;
r=r+1;
printf("Enter the element : ");
scanf("%d",&queue[f]);
}
else
{
f=f-1;
printf("Enter the element : ");
scanf("%d",&queue[f]);
}
}
void delatrear()
{
if(f==-1&&r==-1)
printf("Queue underflow\n");
else if(f==r)
{
printf("The deleted element is : %d\n",queue[r]);
f=-1;
r=-1;
}
else
{
printf("The deleted element is : %d\n",queue[r]);
r=r-1;
}
}
void delatfront()
{
if(f==-1&&r==-1)
printf("Queue underflow\n");
else if(f==r)
{
printf("The deleted elemen is : %d\n",queue[f]);
f=-1;
r=-1;
}
else
{
printf("The deleted element is : %d\n",queue[f]);
f=f+1;
}
}
void traversal()
{
int i;
if(f==-1&&r==-1)
printf("Queue underflow\n");
else
{
printf("The elements are : \t");
for(int i=f;i<=r;i++)
{
printf("%d\t",queue[i]);
}
printf("\n");
}
}
