#include<stdio.h>
#include<stdlib.h>
struct node{
int data;
struct node *next;
}*head,*list,*temp,*before;
void inend();
void inbegin();
void inafter();
void inbefore();
void delend();
void delbegin();
void delparticular();
void traversal();
void main()
{
int option,y;
do{
printf("\t\t\tMENU\n\n");
printf("1 : Insertion through end\n2 : Insertion through beginning\n3 : Insertion after a given element\n4 : Insertion before a given element\n5 : Deletion from end\n6 : Deletion from beginning\n7 : Deletion of particular element\n8 : Traversal");
printf("\nEnter the option : ");
scanf("%d",&option);
switch(option)
{
case 1:
inend();
break;
case 2:
inbegin();
break;
case 3:
inafter();
break;
case 4:
inbefore();
break;
case 5:
delend();
break;
case 6:
delbegin();
break;
case 7:
delparticular();
break;
case 8:
traversal();
break;
}
printf("Do you want to continue : ");
scanf("%d",&y);
}while(y==1);
}
void inend()
{
temp=(struct node *)malloc(sizeof(struct node));
if(temp==NULL)
printf("Overflow");
else
{
printf("Enter the data : ");
scanf("%d",&temp->data);
temp->next=NULL;
if(head==NULL){
head=temp;
temp->next=head;
}
else
{
list=head;
while(list->next!=head)
{
list=list->next;
}
list->next=temp;
temp->next=head;
}
}
}
void inbegin()
{
temp=(struct node *)malloc(sizeof(struct node));
if(temp==NULL)
printf("Overflow");
else
{
printf("Enter the data : ");
scanf("%d",&temp->data);
temp->next=NULL;
if(head==NULL){
head=temp;
temp->next=head;
}
else
{
list=head;
temp->next=head;
while(list->next!=head)
{
list=list->next;
}
list->next=temp;
head=temp;
}
}
}
void inafter()
{
int key;
temp=(struct node *)malloc(sizeof(struct node));
if(temp==NULL)
printf("Overflow");
else
{
printf("Enter the data : ");
scanf("%d",&temp->data);
temp->next=NULL;
if(head==NULL)
head=temp;
else
{
printf("Enter the search element : ");
scanf("%d",&key);
list=head;
while(list->data!=key)
{
list=list->next;
}
temp->next=list->next;
list->next=temp;
}
}
}
void inbefore()
{
int key;
temp=(struct node *)malloc(sizeof(struct node));
if(temp==NULL)
printf("Overflow");
else
{
printf("Enter the data : ");
scanf("%d",&temp->data);
temp->next=NULL;
if(head==NULL)
head=temp;
else
{
printf("Enter the search element : ");
scanf("%d",&key);
list=head;
while(list->data!=key)
{
before=list;
list=list->next;
}
temp->next=before->next;
before->next=temp;
}
}
}
void delend()
{
list=head;
if(head==NULL)
printf("Underflow");
else if(list->next==head)
{
printf("The deleted data is : %d\n",list->data);
head=NULL;
free(list);
}
else
{
while(list->next!=head)
{
before=list;
list=list->next;
}
before->next=head;
printf("The deleted data is : %d\n",list->data);
free(list);
}
}
void delbegin()
{
list=head;
if(head==NULL)
printf("Underflow\n");
else if(list->next==head)
{
printf("The deleted data is : %d\n",list->data);
head=NULL;
free(list);
}
else
{
before=head;
while(list->next!=head){
list=list->next;
}
head=before->next;
list->next=head;
printf("The deleted data is : %d\n",before->data);
free(before);
}
}
void delparticular()
{
int key;
if(head==NULL)
printf("Underflow\n");
else
{
printf("Enter the search element : ");
scanf("%d",&key);
list=head;
while(list->data!=key)
{
before=list;
list=list->next;
}
before->next=list->next;
printf("The deleted data is : %d\n",list->data);
free(list);
}
}
void traversal()
{
if(head==NULL)
printf("Underflow\n");
else
{
list=head;
printf("The datas are : \t");
while(list->next!=head)
{
printf("%d\t",list->data);
list=list->next;
}
printf("%d\n",list->data);
}
}
