#include<stdio.h>
#define size 3
void enqueue();
void dequeue();
void traversal();
int queue[size],f=-1,r=-1;
void main()
{
int option,y;
do{
printf("\t\t\tMENU\n\n1: Enqueue\n2: Dequeue\n3: Traversal\n");
printf("Enter the option : ");
scanf("%d",&option);
switch(option)
{
case 1:
enqueue();
break;
case 2:
dequeue();
break;
case 3:
traversal();
break;
default:
printf("Invalid option\n");
break;
}
printf("Do you want to continue '1'- YES '0'- NO : ");
scanf("%d",&y);
}while(y==1);
}
void enqueue()
{
if((f==r+1)||(f==0 && r==size-1))
printf("Queue overflow\n");
else if(f==-1&&r==-1)
{
f=f+1;
r=r+1;
//printf("r = %d\n",r);
printf("Enter the element : ");
scanf("%d",&queue[r]);
}
else
{
r=(r+1)%size;
//printf("r = %d\n",r);
printf("Enter the element : ");
scanf("%d",&queue[r]);
}
}
void dequeue()
{
if(f==-1&&r==-1)
printf("Queue underfow\n");
else if(f==r)
{
printf("The deleted element is : %d\n",queue[f]);
r=-1;
f=-1;
//printf("f = %d\n",f);
}
else
{
printf("The deleted element is : %d\n",queue[f]);
f=(f+1)%size;
//printf("f = %d\n",f);
}
}
void traversal()
{
int i;
if(f==-1&&r==-1)
printf("Queue underflow\n");
else if(f<=r)
{
for(i=f;i<=r;i++)
{
printf("%d\t",queue[i]);
}
printf("\n");
}
else
{
for(i=f;i<size;i++)
{
printf("%d\t",queue[i]);
}
for(i=0;i<=r;i++)
{
printf("%d\t",queue[i]);
}
printf("\n");
}
}
