#include<stdio.h>
void sort(int a[10],int n);
int a[10],n,i,j,t,low,high,mid,f=0;
void main()
{
printf("enter the no of elements in array:");
scanf("%d",&n);
printf("enter the elements in the array\n");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
sort(a,n);
for (i=0;i<n;i++)
printf("%d\t",a[i]);
printf("\nenter the search item:");
scanf("%d",&t);
low=0;
high=n-1;
while(high>=low)
{
mid=(high+low)/2;
if(a[mid]==t)
{
f=1;
break;
}
else if(t<a[mid])
high=mid-1;
else
low=mid+1;
}
if(f==0)
printf("element not found");
else
printf("\nelement found at %d",mid);
}
void sort(int a[10],int n)
{
int temp;
for(i=0;i<n-1;i++)
{
for(j=i+1;j<n;j++)
{
if(a[i]>a[j])
{
temp=a[i];
a[i]=a[j];
a[j]=temp;
}
}
}
}
